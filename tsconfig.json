{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "allowImportingTsExtensions": true,
      "emitDeclarationOnly": true,
      "declaration": true,
      "declarationDir": "./dist",
      "skipLibCheck": true,
      "typeRoots": ["./node_modules/@types"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  